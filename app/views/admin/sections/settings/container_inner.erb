<div id="container-section-settings-modal-<%= section.id %>" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t('admin.modal.container_section_settings_modal.section_settings') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for section, url: admin_section_path(id: section.id), method: :put, remote: true, html: { id: "update-section-#{section.id}-properties-form", class: 'form-horizontal' } do |f| %>
          <% properties = [['Světlý styl', 'dark-wrapper'], ['Tmavý styl', 'black-wrapper']] %>
          <div class="form-group">
            <%= f.label t('admin.modal.container_section_settings_modal.properties') %>
            <% properties.each_with_index do |p, i| %>
              <div class="custom-control custom-checkbox">
                <input type="checkbox" name="section[css_classes][]" value="<%= p.last %>" id="section-<%= section.id %>-css-classes-<%= i+1 %>" class="custom-control-input" <%= section.css_classes.include?(p.last) ? 'checked="checked"' : '' %>>
                <label class="custom-control-label" for="section-<%= section.id %>-css-classes-<%= i+1 %>"><%= p.first %></label>
              </div>
            <% end %>
          </div>

          <div class="form-group mt-4 mb-2">
            <%= f.label :description, t('admin.modal.container_section_settings_modal.description') %>
            <%= f.text_field :description, class: 'form-control' %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal"><%= t('admin.modal.container_section_settings_modal.properties') %></button>
        <button type="button" data-action="send-form" data-form="<%= "#update-section-#{section.id}-properties-form" %>" class="btn btn-success"><%= t('admin.modal.container_section_settings_modal.save') %></button>
      </div>
    </div>
  </div>
</div>