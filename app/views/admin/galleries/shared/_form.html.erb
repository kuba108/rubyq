<div class="col-md-12">
  <div class="card strpied-tabled-with-hover">
    <div class="card-header">
      <h4 class="card-title"><%= t('.new_gallery') %></h4>
    </div>
    <div class="card-body">
      <%= form_for resource, url: { action: resource_action }, method: resource_method, html: { class: 'form-horizontal' } do |f| %>
        <div class="form-group">
          <%= f.label :name, t('.name'), class: 'col-sm-2 control-label' %>
          <%= f.text_field :name, value: '', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :description, t('.description'), class: 'col-sm-2 control-label' %>
          <%= f.text_field :description, value: '', class: 'form-control' %>
        </div>

        <button type="submit" class="btn btn-success btn-fill float-right"><%= t('.create_gallery') %></button>
      <% end %>
    </div>
  </div>
</div>