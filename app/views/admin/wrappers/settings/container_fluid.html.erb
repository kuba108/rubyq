<div id="fluid-wrapper-settings-modal-<%= wrapper.id %>" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t('admin.modal.fluid_wrapper_settings_modal.settings') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for wrapper, url: admin_page_wrapper_path(page_id: page.id, id: wrapper.id), method: :put, remote: true, html: { id: "update-wrapper-#{wrapper.id}-properties-form", class: 'form-horizontal' } do |f| %>
          <div class="form-group">
            <%= f.label :css_class, t('admin.modal.fluid_wrapper_settings_modal.size') %>
            <%= f.select :css_class, options_for_select(['dark-wrapper', 'black-wrapper'], selected: ''), {}, class: 'form-control select-picker' %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal"><%= t('admin.modal.fluid_wrapper_settings_modal.cancel') %></button>
        <button type="button" data-action="send-form" data-form="<%= "#update-wrapper-#{wrapper.id}-properties-form" %>" class="btn btn-success"><%= t('admin.modal.fluid_wrapper_settings_modal.save') %></button>
      </div>
    </div>
  </div>
</div>