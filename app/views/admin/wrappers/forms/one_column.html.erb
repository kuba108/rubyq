<div class="one-column-wrapper wrapper-card" data-item-id="<%= wrapper.id %>">
  <div class="column wrapper-column clearfix">
    <div class="widget-wrapper" data-wrapper-id="<%= wrapper.id %>" data-wrapper-part="column">
      <% wrapper.wrapper_widgets.where(part: 'column').order(position: :asc).each do |item| %>
        <%= render partial: 'admin/widgets/widget', locals: { page: @page, wrapper_widget: item, widget: item.widget } %>
      <% end %>
    </div>

    <div class="float-left">
      <div class="btn-group" role="group">
        <%= render partial: 'admin/wrappers/shared/widget_dropdown', locals: { wrapper: wrapper, part: 'column' } %>
      </div>
    </div>
    <div class="float-right">
      <%= link_to t('.remove'), admin_wrapper_path(id: wrapper.id, page_id: @page.id), method: :delete, remote: true, class: 'btn btn-danger' %>
    </div>
  </div>

  <div class="drag-placeholder">
    <span class='fa fa-bars'></span>
  </div>
</div>