<ul class="navbar-nav">
  <% menu_items.each do |item| %>
    <li class="nav-item  <% if item.has_nested_items? %>dropdown<% end %>">
      <% if item.has_nested_items? %>
        <a class="nav-link dropdown-toggle" href="<%= item.url %>" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= item.label %>
        </a>
        <div class="dropdown-menu">
          <% item.nested_items.each do |nested_item| %>
            <a class="dropdown-item" href="<%= nested_item.url %>"><%= nested_item.label %></a>
          <% end %>
        </div>
      <% else %>
        <a class="nav-link" href="<%= item.url %>"><%= item.label %></a>
      <% end %>
    </li>
  <% end %>
</ul>